{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
{% block title %} Hankuk Place {% endblock %}
{% block body %}
    <section class="container-fluid p-0 m-0">
        <div class="detail_img"></div>
        <div class="row d-flex justify-content-between w-100 my-5">
            <div class="col-md-5 text-center">
                <img class="mx-4 detail_img_size" src="{{ asset('images/properties/') ~ product.filename }}" alt="">
            </div>
            <div class="col-md-5">
                <h3 class="text-center pb-4">{{ product.name }}</h3>
                <p class="text-center">{{ product.description }}</p>
                <h4 class="pb-4">{{ product.price }} â‚¬</h4>
                <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-danger btn-sm p-4 float-right" type="button">
                    <i class="fas fa-shopping-cart fa-2x"></i>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
